pipeline {
  environment {
    // Project and app configuration
    PROJECT = "green-tract-379622"
    APP_NAME = "binary-calculator2"
    CLUSTER = "sofe3980u"
    CLUSTER_ZONE = "northamerica-northeast1-b"
    IMAGE_TAG = "gcr.io/${PROJECT}/${APP_NAME}:${BUILD_NUMBER}"
    JENKINS_CRED = "green-tract-379622"
    // Assuming 'deployment' is the kind of your Kubernetes deployment and it's named after your app
    DEPLOYMENT_NAME = "${APP_NAME}"
  }
  
  agent {
    kubernetes {
      label 'sample-app'
      defaultContainer 'jnlp'
      yaml """
apiVersion: v1
kind: Pod
metadata:
  labels:
    component: ci
spec:
  serviceAccountName: cd-jenkins
  containers:
  - name: gcloud
    image: gcr.io/cloud-builders/gcloud
    command:
    - cat
    tty: true
  - name: kubectl
    image: gcr.io/cloud-builders/kubectl
    command:
    - cat
    tty: true
"""
    }
  }
  tools {
    maven 'maven' 
  }
  stages {
    stage ('Init') {
      steps {
        checkout scm
        sh 'echo "Start of Job"'
      }
    }
    stage ('build') {
      steps {
        sh 'mvn package -DskipTests -f ./BinaryCalculatorWebapp/pom.xml'
      }
    }
    stage('Build and push image with Container Builder') {
      steps {
        container('gcloud') {
          sh "/builder/google-cloud-sdk/bin/gcloud builds submit --tag ${IMAGE_TAG} ./BinaryCalculatorWebapp/"
        }
      }
    }
    stage('Deploy to GKE') {
      steps {
        container('kubectl') {
          script {
            // Authenticate kubectl
            sh "gcloud container clusters get-credentials ${CLUSTER} --zone ${CLUSTER_ZONE} --project ${PROJECT}"
            // Deploy the new image to the Kubernetes deployment
            sh "kubectl set image deployment/${DEPLOYMENT_NAME} ${APP_NAME}=${IMAGE_TAG} --record"
          }
        }
      }
    }
  }
}
